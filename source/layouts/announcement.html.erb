<% content_for :swiftype_robot do %>
  <meta name="st:robots" content="follow, noindex">
<% end %>

<% wrap_layout :layout do %>
  <div class="row">
    <div class="small-12 columns">

      <%= partial "next-class" %>

      <header>
        <h2><%= current_page.title %></h2>
        <time pubdate="pubdate" datetime="<%= current_page.date.strftime('%Y-%m-%e') %>">
          <%= current_page.date.strftime('%b %e, %Y') %>
        </time>
      </header>

      <%= yield %>

      <div>
        <p>
        <%= partial "social-sharing-buttons",
          :locals => locals.merge(label: "Know someone who might be interested? Spread the word!") %>
        </p>
      </div>

      <%= partial "related-content", :locals => locals %>

      <%= partial "footer-main" %>

    </div>
  </div>


<% end %>

