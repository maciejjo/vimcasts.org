<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || yield_content(:title) %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body>
    <div id="logo">
      <h1>
        <% if current_page.url == "/" %>
          <span>VimCasts.org</span>
        <% else %>
          <a href="/" title="Go to Vimcasts.org homepage">VimCasts.org</a>
        <% end %>
      </h1>
    </div>

    <nav>
      <ul>
        <li><%= link_to "Home", "/" %></li>
        <li><%= link_to "Episodes", "/episodes" %></li>
        <li><%= link_to "Blog", "/blog" %></li>
        <li><%= link_to "Training", "/training" %></li>
        <li><%= link_to "Pathways", "/paths" %></li>
        <li><%= link_to "Publications", "/publications" %></li>
      </ul>
    </nav>

    <%= yield %>
  </body>

</html>
