<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || yield_content(:title) %></title>

    <%= stylesheet_link_tag "app", "style" %>
    <%= javascript_include_tag "modernizr" %>
  </head>

  <body class="<%= page_classes %>">

    <div id="logo">
      <h1>
        <% if current_page.url == "/" %>
          <span>VimCasts.org</span>
        <% else %>
          <a href="/" title="Go to Vimcasts.org homepage">VimCasts.org</a>
        <% end %>
      </h1>
    </div>

    <nav>
      <ul>
        <li><%= link_to "Home", "/" %></li>
        <li><%= link_to "Episodes", "/episodes" %></li>
        <li><%= link_to "Blog", "/blog" %></li>
        <li><%= link_to "Training", "/training" %></li>
        <li><%= link_to "Pathways", "/paths" %></li>
        <li><%= link_to "Publications", "/publications" %></li>
      </ul>
    </nav>

    <%= yield %>

    <%= javascript_include_tag  "all" %>
  </body>
</html>
