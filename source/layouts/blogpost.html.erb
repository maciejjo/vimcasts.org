<% wrap_layout :layout do %>

  <div class="row">
    <div class="small-12 columns">
      <%= partial "next-class" %>
    </div>
  </div>

  <section class="article detail">
    <header>
      <div class="title-row">
        <h2 class="title">
          <%= current_page.title %>
        </h2>
      <time class="pubdate" pubdate="pubdate" datetime="<%= current_page.date.strftime('%Y-%m-%e') %>">
        <%= format_pubdate(current_page) %>
      </time>
      </div>
    </header>

    <div class="content-row">
      <div id="article_body" data-swiftype-index="true">
        <%= yield %>
      </div>
      <dl class="accordion" data-accordion>
        <dd>
          <a href="#comments" class="show-comments">Comments<span class="disclosure"></span></a>
          <div id="comments" class="content">
            <%= partial "disqus" %>
          </div>
        </dd>
      </dl>
    </div>

  </section>

  <%= partial "social-sharing-buttons",
    :locals => locals.merge(label: "Like this article? Spread the word!") %>

  <div class="row">
    <div class="small-12 columns">
      <%= partial "related-content", :locals => locals %>
      <%= partial "footer-main" %>
    </div>
  </div>

<% end %>

